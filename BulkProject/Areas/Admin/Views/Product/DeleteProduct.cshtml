@model Product
<div class=" card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <div class="mb-3 row">
                    <label asp-for="Id" class="p-2 fw-bold"></label>
                    <input asp-for="Id" class="form-control" disabled readonly />
                </div>
                <div class="mb-3 row">
                    <label asp-for="Title" class="p-2 fw-bold"></label>
                    <input asp-for="Title" class="form-control" disabled readonly />
                </div>
                <div class="mb-3 row">
                    <label asp-for="SKU" class="p-2 fw-bold"></label>
                    <input asp-for="SKU" class="form-control" disabled readonly />
                </div>
                <div class="mb-3 row">
                    <label asp-for="BrandName" class="p-1 fw-bold"></label>
                    <input asp-for="BrandName" class="form-control" disabled readonly />
                </div>
                <div class="mb-3 row">
                    <label asp-for="Description" class="p-1 fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" disabled readonly></textarea>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Price" class="p-1 fw-bold"></label>
                    <input asp-for="Price" class="form-control" disabled readonly />
                </div>
                <div class="mb-3 row">
                    <label asp-for="Price2" class="p-1 fw-bold"></label>
                    <input asp-for="Price2" class="form-control" disabled readonly />
                </div>
                <div class="mb-3 row">
                    <label asp-for="PriceMoreThan10" class="p-1 fw-bold"></label>
                    <input asp-for="PriceMoreThan10" class="form-control" disabled readonly />
                </div>
                <div class=row>
                    <div class="col-5">
                        <button type="submit" class="btn btn-danger form-control row text-center">
                            <i class="bi bi-trash">Delete</i>
                        </button>
                    </div>
                    <div class="col-5">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control row text-center"><i class="bi bi-arrow-clockwise">Back</i></a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

