@model Category
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Id" class="p-1"></label>
            <input asp-for="Id" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="p-1"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class=row>
            <div class="col-3">
                <button type="submit" class="btn btn-danger form-control row">Delete</button>
            </div>
            <div class="col-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control row">Back to List</a>
            </div>
        </div>
    </div>
</form>
