@*Define view model controller for category*@
@*To read database and initialize corresponding View content*@
@model List<Category>
@{
    @*To view this page go https://localhost:7274/category/index*@
    ViewData["Title"] = "Category List";
}
<div class ="container">
    <div class ="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class ="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Category
            </a>
        </div>
    </div>
        
</div>



<table class="table table-bordered table-striped">
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </tr>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>
